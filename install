#!/bin/bash
which go || echo "Please install go"  exit 1
go build -o fast-chroot main.go
sudo cp fast-chroot /usr/local/sbin/ 

echo "–ó–∞–º–µ–Ω–∏—Ç—å artix-chroot –Ω–∞ fast-chroot" 
read -p "||[Y/n]|:  "  -n 1 -r
if [[ $REPLY =~ ^[Yy]$ ]] || [[ -z $REPLY ]]; then
    echo "‚úÖ –ò—Å–ø–æ–ª—å–∑—É–µ–º fast-chroot"
    sudo ln -sf /usr/local/sbin/fast-chroot /usr/sbin/artix-chroot
else
    echo "üîÅ –û—Å—Ç–∞–≤–ª—è–µ–º artix-chroot"
fi
